extends ../layout

block content
  h1.
    Users
  table.table.user-list.table-striped.table-bordered.table-hover
    thead
      tr
        th.
          Avatar
        th.
          Name
        th.
          Email
    - each user, i in users
      tr
        td
          a(href='/users/#{user._id}')
            img.responsive.img-circle.logo-small.blowing-blue(src="/avatars/#{user.avatar}")
        td
          a(href='/users/#{user._id}')= user.name
        td
          a(href='/users/#{user._id}')= user.email
        