extends ../layout

block content
  .container
      #signupbox.mainbox
          .panel.panel-info
            .panel-heading
              .panel-title Sign Up
              div(style='float:right; font-size: 85%; position: relative; top:-10px')
            .panel-body
              form#formAddUser.form-horizontal(name="adduser", method="post", action="/users",  enctype="multipart/form-data", role='form')
                .form-group
                  label.col-md-3.control-label(for='email') Email
                  .col-md-9
                    input.form-control#input-email(type='text', name='email', placeholder='Email Address')
                .form-group.user-only
                  label.col-md-3.control-label(for='name') Name
                  .col-md-9
                    input.form-control#input-user-name(type='text', name='name', placeholder='Name')
                .form-group
                  label.col-md-3.control-label(for='password') Password
                  .col-md-9
                    input.form-control#password1(type='password', name='password', placeholder='Password')
                .form-group
                  label.col-md-3.control-label(for='interests') Interests
                  .col-md-9
                    input.form-control#interests(type='text', name='interests', placeholder='Javascript, css, html')
                .form-group
                  label.col-md-3.control-label(for='file') Upload Avatar
                  .col-md-9
                    input.form-control(type='file', name='profilePicture', accept="image/*")
                .form-group
                  .col-md-offset-3.col-md-9
                    button#btn-signup.btn.btn-info(type='submit')
                      i.glyphicon.glyphicon-user
                      | &nbsp; Sign Up